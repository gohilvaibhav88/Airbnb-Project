<% layout("/layouts/boilerplate") %>

<br>
    <h2>Edit your Listing </h2>
    <div class="new-container">
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" >
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control">
        </div>
        
        <br/>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="30" rows="10"  class="form-control"><%= listing.description %></textarea>
        </div>
        
        <br/>
        <div>
            <label for="image" class="form-label">Update Image Link </label>
            <input type="text" name="listing[image]" value="<%= listing.image %>"class="form-control">
        </div>
        
        <br/>

        <div>
            <label for="price" class="form-label">Update Image Link </label>
            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control">
        </div>
        <br>
        <div>
            <label for="location" class="form-label">Update Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>  "class="form-control">

        </div>
        
        <br/>
        <div>
            <label for="Country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control">


        </div>
        <br/>
        
        <button type="submit" class="btn btn-danger">Edit</button>
    </form>
</div>

