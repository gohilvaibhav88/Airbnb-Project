<% layout("/layouts/boilerplate") %>

<br>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Listing Details</h3>
        </div>
        <div class="card col-6 offset-2">
            <img src="<%= listing.image %>" alt="listing_image" class="card-img-top show-img"/>
            <div class="card-body">
                <p class="card-text"><%= listing.title %> <br>
                    <%= listing.description %> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %> <br>

                </p>
            </div>
        </div>


        
        <div class="btns">
        <a class="btn btn-danger col-1 offset-2" href="/listings/<%= listing.id %>/edit">Edit</a>
        
        
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark offset-6">Delete</button>
        </form>
        
    
    </div>
    </div>
    <br>
    <br>
    
