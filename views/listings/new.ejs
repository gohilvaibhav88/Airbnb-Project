<% layout("/layouts/boilerplate") %>

    

    <div class="new-container offset-2">
      <h3>Create a New Listing</h3>
      <br>
        <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate>

            <div>
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" placeholder="Enter the Title " class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Name for the Place is Mandatory
                  </div>
                
            </div>
            <br/>
            <div>
                <label for="description" class="form-label">Discription</label>
                <textarea name="listing[description]" cols="30" rows="7" placeholder="Enter the Description" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Enter the Short Description of the Place
                  </div>
            </div>
            <br/>
            
            <div>
              <label for="image" class="form-label">Upload Image Of your Place</label>
              <input type="file" name="listing[image]"  class="form-control">
          </div>
            
            <br/>
            <div>
                <label for="price" class="form-label">Price of the Suites</label>
                <input name="listing[price]" placeholder="Enter the price" class="form-control" required>
               
                  <div class="invalid-feedback">
                    Kindly provide you pricing!!
                  </div>
            </div>
    
            <br/>
    
            <div>
                <label for="location" class="form-label">Enter the name of the Location</label>
                <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control" required>
                
                  <div class="invalid-feedback">
                    Please Enter a Valid Location
                  </div>
                
            </div>
            <br/>
            <div>
                <label for="country" class="form-label">Enter the Country name</label>
                <input type="text" name="listing[country]" placeholder="Eg. India" class="form-control" required>
                
                  <div class="invalid-feedback">
                    Please Enter a Valid Country
                  </div>
            </div>
            <br>
            <button type="submit" class="btn btn-danger ">Add</button>
        </form>
    </div>
    
    
