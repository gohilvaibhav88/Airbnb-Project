<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-2">
    <h3>SignUp On Airbnb</h3>
<br>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div>
                <label for="username" class="form-label" name="username">Username</label>
                <input type="text" name="username" placeholder="Enter your Name " class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Username is mandatory!!
                  </div>
                
            </div>
            <br>
            <div>
                <label for="email" class="form-label" name="email">Email</label>
                <input type="text" name="email" placeholder="Enter you Email " class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Email is mandatory!!
                  </div>
                
            </div>
<br>
            <div>
                <label for="password" class="form-label" name="Password">Password</label>
                <input type="text" name="password" placeholder="Enter your Password " class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Password is mandatory!!
                  </div>
                
            </div>
            <br>
            <button class="btn btn-danger">Register</button>
            <br>
            <br>
            <br>
            <br>
            <br>
        </form>
    </div>
</div>